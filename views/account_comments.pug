extends layout

block content
  body
    .container
        if comment_list !== undefined
            each comment in comment_list
                .row.mt-3
                    .col
                        .card.mb-3(style='max-height: 25vh;')
                          .row.g-0
                            .col-md-8
                              .card-body
                                h5.card-title #{comment.post.title}
                                p.card-text #{comment.comment}
                                p.card-text
                                  small.text-body-secondary #{comment.publishDate_formatted}
                                .row
                                  .col-3
                                    a.btn.btn-info.m-2(href=('/comment/update-comment/' + comment._id)) Edit comment
                                  .col-3
                                    form(method='POST' action='/comment/delete-comment/' + comment._id)
                                      button.btn.btn.btn-danger.m-2(type='submit') Delete comment
            else
                .row.mt-3
                    .col
                        p No comments
        else
            .row.mt-3
                .col
                    p No comments