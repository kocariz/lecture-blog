extends layout

block content
  body
    .container
        if posts_list !== undefined
            each post in posts_list
                .row.mt-3
                    .col
                        .card.mb-3(style='max-height: 25vh;')
                          .row.g-0
                            .col-md-8
                              .card-body
                                h5.card-title #{post.title}
                                p.card-text #{post.mainText.slice(0, 250) + ' ...'}
                                p.card-text
                                  small.text-body-secondary #{post.publishDate_formatted}
                                a.btn.btn-info(href=('/post/' + post._id)) Continue reading
                            .col-md-4
                              img.img-fluid.rounded-start(src=(post.img) alt=(post.img_title) style='object-fit: cover; height: 25vh; max-height: 25vh; width: 100%;')
            else
                .row.mt-3
                    .col
                        p No blog posts
        else
            .row.mt-3
                .col
                    p No blog posts