extends layout

block content
    .container
        main.form-sign.w-100.m-auto
          form(method='POST' action=('/post/update-post/' + post.id) enctype='multipart/form-data')
            h1.h3.mb-3.fw-normal Create  post
            .row
              .col-7
                .form-floating
                  input#title.form-control(type='text' name='title' placeholder='Title' value=post.title)
                  label(for='title') Title
              .col-5
                .form-floating
                  input#subtitle.form-control(type='text' name='subtitle' placeholder='Subtitle' value=post.subtitle)
                  label(for='subtitle') Subtitle
            div
              label(for='img-post') Select image for post
              input#img-post.form-control(type='file' name='img_post' placeholder='Image for post' accept='image/*')
            div(style='margin-top: 5px; margin-bottom: 5px;')
              .form-floating
                input#img-title.form-control(type='text' name='img_title' placeholder='Image title' value=post.imgTitle)
                label(for='img-title') Image title
            .form-floating(style='margin-top: 5px; margin-bottom: 10px;')
              textarea#main-text.form-control(style='height: 200px;' name='main_text' placeholder='Blog content') #{post.mainText}
              label.form-label(for='main-text') Main Text
            .row
              //.col
                button.w-100.btn.btn-lg.btn-outline-info(type='submit') Cancel
              .col
                button.w-100.btn.btn-lg.btn-info(type='submit') Update post
        if errors
          ul
            for error in errors
              li!= error.msg